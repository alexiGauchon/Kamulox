<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".MainActivity">

    <android.support.v7.widget.GridLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:columnCount="2"
            android:background="#ffb698"
            app:rowCount="4"
            app:useDefaultMargins="true">

        <View
                android:onClick="showToastJaune"
                android:layout_height="@dimen/comon_size"
                android:background="#ff6100"
                app:layout_column="0"
                app:layout_columnSpan="2"
                app:layout_gravity="fill"
                app:layout_row="0" />

        <View
                android:onClick="showToastViolet"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="#d85200"
                app:layout_column="0"
                app:layout_columnWeight="1"
                app:layout_gravity="fill"
                app:layout_rowWeight="1"
                app:layout_row="1" />

        <View
                android:onClick="showToastVert"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="#d06f33"
                app:layout_column="1"
                app:layout_columnWeight="1"
                app:layout_rowSpan="2"
                app:layout_rowWeight="2"
                app:layout_gravity="fill"
                app:layout_row="1" />

        <View
                android:onClick="showToastBleu"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="#d38657"
                app:layout_column="0"
                app:layout_rowSpan="2"
                app:layout_columnWeight="1"
                app:layout_gravity="fill"
                app:layout_rowWeight="2"
                app:layout_row="2" />

        <View
                android:onClick="showToastRouge"
                android:layout_width="0dp"
                android:layout_height="@dimen/comon_size"
                android:background="#ff8c45"
                app:layout_column="1"
                app:layout_columnWeight="1"
                app:layout_gravity="fill"
                app:layout_rowWeight="1"
                app:layout_row="3" >
        </View>

    </android.support.v7.widget.GridLayout>

</FrameLayout>